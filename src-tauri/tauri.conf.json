{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "nbdiff",
  "version": "0.1.0",
  "identifier": "com.nbdiff.viewer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "nbdiff",
        "width": 900,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": true,
        "backgroundColor": "#1a1a1c",
        "titleBarStyle": "Transparent",
        "theme": "Dark"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": ["binaries/extract-inputs"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
